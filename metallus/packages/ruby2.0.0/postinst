#! /bin/bash
set -e

PREFIX="/usr/ruby/2.0.0"

update-alternatives --install /usr/bin/ruby ruby ${PREFIX}/bin/ruby 100 \
                    --slave /usr/bin/irb irb ${PREFIX}/bin/irb \
                    --slave /usr/bin/erb erb ${PREFIX}/bin/erb \
                    --slave /usr/bin/rake rake ${PREFIX}/bin/rake \
                    --slave /usr/bin/ri ri ${PREFIX}/bin/ri \
                    --slave /usr/bin/rdoc rdoc ${PREFIX}/bin/rdoc \
                    --slave /usr/bin/testrb testrb ${PREFIX}/bin/testrb
update-alternatives --install /usr/bin/gem gem ${PREFIX}/bin/gem 100
update-alternatives --install /usr/bin/bundle bundle ${PREFIX}/bin/bundle 100